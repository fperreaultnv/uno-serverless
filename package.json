  "bugs": {
    "url": "https://github.com/julienblin/opiniated-lambda/issues"
  },
  "homepage": "https://github.com/julienblin/opiniated-lambda#readme",
  "devDependencies": {
    "coveralls": "^3.0.1",
    "lcov-result-merger": "^3.0.0",
